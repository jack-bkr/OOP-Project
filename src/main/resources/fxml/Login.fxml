<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?> 
<?import javafx.geometry.Insets?>

<GridPane xmlns="http://javafx.com/javafx"
        xmlns:fx="http://javafx.com/fxml"
        fx:controller="mechanicStock.controllers.LoginController"
        alignment="CENTER"
        hgap="10"
        vgap="10"
        styleClass="root"
>

    <padding><Insets top="25" right="25" bottom="25" left="25"/></padding>

    <Text id="welcome-text"
          text="Welcome"
          GridPane.columnIndex="0"
          GridPane.rowIndex="0"
          GridPane.columnSpan="2"
    />

    <Label
        text="Username: "
        GridPane.columnIndex="0"
        GridPane.rowIndex="1"
    />

    <TextField fx:id="userNameTextField"
        GridPane.columnIndex="1"
        GridPane.rowIndex="1"
    />

    <Label 
        text="Password: "
        GridPane.columnIndex="0"
        GridPane.rowIndex="2"
    />

    <TextField fx:id="passwordTextField"
        GridPane.columnIndex="1"
        GridPane.rowIndex="2"
    />

    <HBox spacing="10"
        alignment="BOTTOM_RIGHT"
        GridPane.columnIndex="1"
        GridPane.rowIndex="4"
    >
        <Button fx:id="registerButton" 
            text="Register" 
            onAction="#handleRegisterButtonAction"
        />
        <Button fx:id="loginButton" 
            text="Login" 
            onAction="#handleLoginButtonAction"
        />
    </HBox>

    
</GridPane> 


