<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?> 
<?import javafx.geometry.Insets?>

<GridPane xmlns="http://javafx.com/javafx"
        xmlns:fx="http://javafx.com/fxml"
        fx:controller="mechanicStock.controllers.ViewController"
        alignment="CENTER"
        hgap="10"
        vgap="10"
        styleClass="root"
>

    <padding><Insets top="25" right="25" bottom="25" left="25"/></padding>

    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS" percentWidth="12.5"/>
        <ColumnConstraints hgrow="ALWAYS" percentWidth="12.5"/>
        <ColumnConstraints hgrow="ALWAYS" percentWidth="12.5"/>
        <ColumnConstraints hgrow="ALWAYS" percentWidth="12.5"/>
        <ColumnConstraints hgrow="ALWAYS" percentWidth="12.5"/>
        <ColumnConstraints hgrow="ALWAYS" percentWidth="12.5"/>
        <ColumnConstraints hgrow="ALWAYS" percentWidth="12.5"/>
        <ColumnConstraints hgrow="ALWAYS" percentWidth="12.5"/>
    </columnConstraints>

    <rowConstraints>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints vgrow="ALWAYS" />
    </rowConstraints>

    <Label fx:id="welcomeLabel"
        id="welcome-text"
        text="Welcome"
        GridPane.columnIndex="0"
        GridPane.rowIndex="0"
        GridPane.columnSpan="2"/>

    <Label
        GridPane.columnIndex="2"
        GridPane.rowIndex="0"/>

    <Label
        GridPane.columnIndex="3"
        GridPane.rowIndex="0"/>   

    <Label
        GridPane.columnIndex="4"
        GridPane.rowIndex="0"/>   

    <Label
        GridPane.columnIndex="5"
        GridPane.rowIndex="0"/>      

    <Label 
        text="Search: "
        GridPane.columnIndex="6"
        GridPane.rowIndex="0"
        GridPane.halignment="RIGHT"/>

    <TextField fx:id="searchField"
        GridPane.columnIndex="7"
        GridPane.rowIndex="0"
        GridPane.columnSpan="2"/>


    <TableView fx:id="table"
        GridPane.columnIndex="0"
        GridPane.rowIndex="1"
        GridPane.columnSpan="8"/>

    <Button fx:id="AddButton"
        id="mainWindowButton"
        text="Add"
        GridPane.columnIndex="0"
        GridPane.rowIndex="2"
        onAction="#handleAddButton"/>
    
    <Button fx:id="DeleteButton"
        id="mainWindowButton"
        text="Delete"
        GridPane.columnIndex="1"
        GridPane.rowIndex="2"
        onAction="#handleDeleteButton"/>

    
</GridPane>